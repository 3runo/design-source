{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "packages/",
    "skipLibCheck": false,
    "sourceMap": true,
    "strictBindCallApply": true,
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"]
  }
}
